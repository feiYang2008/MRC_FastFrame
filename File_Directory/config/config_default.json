{"global":{
    "app_name": {"type":"string","description":"用于定义本次运行的名称，保存日志、模型会参照该名称","default":""},
    "load_model_path":{"type":"string","description":"当继续训练时，指定模型路径","default":""},
    "use_parallel":{"type":"bool","description":"是否并行运行训练/测试","default":false},
    "use_gpu":{"type":"bool","description":"是否使用gpu","default":true},
    "num_of_device":{"type":"int","description":"使用的设备数","default":1},
    "model_path":{"type":"string","description":"预测使用模型路径","default":""},
    "pretrained_model_type": {"type":"string","description":"预训练模型选用哪个","default":"bert"},
    "batch_size":{"type":"int","description":"batch的大小","default":32}
  },
"dataset":{
    "dataset_path":{"type":"string","description":"数据集路径","default":"File_Directory/dataset"},
    "train_file_path_zhidao":{"type":"string","description":"zhidao数据集路径","default":"File_Directory/dataset/zhidao.train.json"},
    "train_file_path_search":{"type":"string","description":"search数据集路径","default":"File_Directory/dataset/search.train.json"},
    "train_examples_path":{"type":"string","description":"划分好的训练集缓存路径","default":"File_Directory/examples/train.examples"},
    "dev_examples_path":{"type":"string","description":"划分好的验证集缓存路径","default":"File_Directory/examples/dev.examples"},
    "test_examples_path":{"type":"string","description":"划分好的测试集缓存路径","default":"File_Directory/examples/test.examples"},
    "max_seq_length":{"type":"int","description":"最长序列长度","default":512},
    "vocab_type":{"type":"string","description":"读取字典文件类型","default":"vocab"},
    "vocab_name":{"type":"string","description":"读取字典文件名","default":"vocab"},
    "vocab_format":{"type":"string","description":"读取字典文件格式","default":"txt"},
    "do_lowercase":{"type":"bool","description":"是否进行对西文字符的处理","default":true},
    "is_mask":{"type":"bool","description":"是否进行mask覆盖","default":false},
    "shuffle":{"type":"bool","description":"是否对examples进行打乱","default":true}
  },
"build":{
    "vocab_size": {"type":"int","description":"当不为-1时，将优先于程序计算的实际vocab size","default":-1},
    "num_labels":{"type":"int","description":"分类的类别数","default":3},
    "use_fp16":{"type":"bool","description":"是否使用浮点16位","default":false},
    "type_vocab_size":{"type":"int","description":"sententce_type的类型数","default":2},
    "hidden_size":{"type":"int","description":"embedding后向量的维数","default":768},
    "num_hidden_layers":{"type":"int","description":"内部encoder的层数","default":12},
    "num_attention_heads":{"type":"int","description":"attention_heads的数量","default":12},
    "hidden_act":{"type":"string","description":"激活函数的名称","default":"gelu"},
    "hidden_dropout_prob":{"type":"float","description":"除attention参数外的dropout率","default":0.1},
    "attention_dropout_prob":{"type":"float","description":"attention参数的dropout率","default":0.1},
    "initializer_range":{"type":"float","description":"参数随机初始化时的标准差","default":0.02},
    "mrc_layer":{"type":"string","description":"机器阅读理解层","default":"cls_fc"},
    "freeze_pretrained_model":{"type":"bool","description":"是否冻结预训练模型参数","default":false}
},
"train":{
    "max_epoch":{"type":"int","description":"最大训练epoch","default":20},
    "validate_in_epoch": {"type":"bool","description":"是否在epoch中进行验证","default":true},
    "validate_frequency_step": {"type":"int","description":"若在epoch中进行验证，则多少step验证一次","default":500},
    "early_stopping":{"type":"bool","description":"是否采用早停策略","default":true},
    "early_stopping_threshold":{"type":"float","description":"性能增长比例小于阈值被判断为停滞","default":0.03},
    "early_stopping_stand_times":{"type":"int","description":"连续停滞超过几次停止训练","default":5},
    "base_learning_rate":{"type":"float","description":"基础学习率","default":0.0001},
    "learning_rate_strategy":{"type":"string","description":"学习率变化策略","default":"fixed"},
    "optimizer":{"type":"string","description":"优化器选择","default":"sgd"},
    "gradient_clip": {"type":"bool","description":"做梯度裁剪","default":false},
    "clip_norm": {"type":"float","description":"若做梯度裁剪，范数最大值","default":1.0},
    "regularization":{"type":"string","description":"正则化选择，可选L1或L2或空","default":""},
    "regularization_coeff": {"type":"float","description":"正则化系数","default":0.0},
    "decay_step":{"type":"int","description":"学习率在这个步数范围内逐渐下降","default":10000},
    "decay_rate":{"type":"float","description":"学习率下降速率","default":0.5},
    "stair_decay":{"type":"bool","description":"学习率是否阶梯下降","default":false},
    "warm_up_step":{"type":"int","description":"warm_up的步数，0为不warm_up","default":4000},
    "start_learning_rate":{"type":"float","description":"初始学习率","default":1e-05},
    "end_learning_rate":{"type":"float","description":"最终学习率","default":1e-05},
    "momentum":{"type":"float","description":"动量","default":0.9},
    "use_nesterov":{"type":"bool","description":"是否赋能动量","default":false},
    "adagrad_epsilon":{"type":"float","description":"维持数值稳定性的浮点型值","default":1e-06},
    "adagrad_accumulator_value":{"type":"float","description":"moment累加器的初始值","default":0.0},
    "adam_beta1":{"type":"float","description":"一阶矩估计的指数衰减率","default":0.9},
    "adam_beta2":{"type":"float","description":"二阶矩估计的指数衰减率","default":0.999},
    "adam_epsilon":{"type":"float","description":"保持数值稳定性的短浮点类型值","default":1e-08},
    "snapshot_frequency":{"type":"int", "description":"每隔多少step保存一次训练快照", "default":500},
    "continue_train":{"type":"bool","description":"是否是接上一次训练，若为true必须指定load_model_path","default":false},
    "read_checkpoint": {"type": "bool","description":"继续上一次训练时，读取其训练的步骤、epoch等信息","default":false},
    "print_per_step":{"type":"int", "description":"每隔多少步打印一次信息，若小于1则不打印", "default": 10}
},
"predict": {
  }
}
